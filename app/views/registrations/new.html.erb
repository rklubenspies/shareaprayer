<h2>Sign up</h2>  

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>  
  <%= devise_error_messages! %>  
  
	<p><%= label_tag :code, "Invite code" %><br />  
  <%= text_field_tag :code, params[:code] %></p>
  
	<p><%= f.label :email %><br />  
  <%= f.text_field :email %></p>  
  
	<% if @user.password_required? %>  
	  <p><%= f.label :password %><br />  
	  <%= f.password_field :password %></p>  
  
	  <p><%= f.label :password_confirmation %><br />  
	  <%= f.password_field :password_confirmation %></p>  
	<% end %>
	
  <p><%= f.label :screenname %><br />  
  <%= f.text_field :screenname %></p>
	
	<%= f.fields_for :profile do |profile_form| %>
    <p><%= profile_form.label :name %><br />
		<%= profile_form.text_field :name %></p>

    <p><%= profile_form.label :bio %><br />
		<%= profile_form.text_area :bio %></p>
  <% end %>
	
	<%= recaptcha_tags %><br />
	
	<p>By registering for an account you are agreeing to our <%= link_to "Terms of Service", terms_path %> and <%= link_to "Privacy Policy", privacy_policy_path %>.<p>
	
  <p><%= f.submit "Sign up" %></p>  
<% end %>  
  
<%= render :partial => "devise/shared/links" %>