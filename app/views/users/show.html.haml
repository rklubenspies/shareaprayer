.users
	.show
		.universal_sidebar
			.name
				%h2
					= @user.name
			.basic
				.profile_pic
					= image_tag @user.image
				.info
					%ul
						%li #{@user.prayer.count} Prayer Requests
						- if @user.group != nil
							%li Member of #{link_to @user.group.name, @user.group}
			.bio
				%b Bio:
				%br
				= @user.bio
			.friendonfb
				= link_to "View Facebook Profile", @user.provider_profile
		.timeline
			%h3 Timeline
			.divider17
				%hr{:style => "margin-top: 0;"}
			.clear
			- unless @prayers.blank?
				.requests
					= render :partial => "prayer", :collection => @prayers
		.clear
		.paginator
			= paginate @prayers, :window => 1, :remote => true